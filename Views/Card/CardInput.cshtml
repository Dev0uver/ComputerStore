@model ComputerStore.ViewModels.CardInputViewModel

<form asp-controller="Card" asp-action="ProcessCard" method="post">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="form-group">
        <label asp-for="CardNumber">Card Number</label>
        <input asp-for="CardNumber" style="width: 200px" class="form-control" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate">Expiration Date</label>
        <input asp-for="ExpirationDate" style="width: 100px" class="form-control" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CVV">CVV</label>
        <input asp-for="CVV" style="width: 100px" class="form-control" />
        <span asp-validation-for="CVV" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group" style="display: flex; gap: 5px">
        <button type="submit" class="btn btn-outline-success">Pay</button>
        <a asp-action="Index" class="btn btn-outline-primary" asp-controller="Carts">Return</a>
    </div>
</form>
