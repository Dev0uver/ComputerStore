@model ComputerStore.Models.Order

@{
    ViewData["Title"] = "Create";
    var cartItems = ViewBag.cartItems as List<Cart>;
    var total = 0;
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>
                Name
            </th>
            <th>
               Amount
            </th>
            <th>
                Price
            </th>
            <th>
                Availability
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var item in cartItems)
        {
            <tr>
                <td>@i @{
                    i++;
                }</td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.Product.Price
                </td>
                <td>
                    @if (item.Product.Availability)
                    {
                        <text>Available</text>
                    }
                    else
                    {
                        <text>Not Available</text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckPayment" method="post">
            @if (TempData.ContainsKey("ErrorMessage"))
            {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
            }
            @if (cartItems.Count() > 0)
            {
                    <input type="hidden" name="userId" value="@cartItems[0].UserId" />
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OnlinePayment" /> @Html.DisplayNameFor(model => model.OnlinePayment)
                </label>
            </div>
            @foreach (var item in cartItems)
            {
                total += item.Product.Price * item.Amount;
            }
            <h5>Total price: @total</h5>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
